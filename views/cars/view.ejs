<html>
    <head>
        <title>All cars</title>
        <link rel="stylesheet" href="/styles/view.css">
    </head>
    <body>
        <%- include("../partials/header") %>
        <div class="center-cont">
            <div class="cars-cont">
                <h1>All cars in <%= manufacturer %></h1>
                <ul class="cars">
                    <% cars.forEach(car => { %>
                        <li>
                            <%= car.make %>
                            <%= car.model %>
                            <div>
                                <a href="/cars/view-car/<%= car.id %>">view</a>
                                <a href="/cars/edit-car/<%= car.id %>">edit</a>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <a href="/">‚Üê Back to home</a>
        </div>
    </body>
</html>