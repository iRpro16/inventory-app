<html>
    <head>
        <title>Add Car Form</title>
        <link rel="stylesheet" href="/styles/add-car.css">
    </head>
    <body>
        <div class="center-cont">
            <h2><%= title %></h2>
            <div class="form-cont">
                <%- include("../partials/errors"); %>
                <form method="POST" action="/cars/add-car"> 
                    <div>
                        <label for="make">Make:</label>
                        <input name="make" placeholder="make" required>
                    </div>
                    <div>
                        <label for="model">Model:</label>
                        <input name="model" placeholder="model"required>
                    </div>
                    <div>
                        <label for="year">Year:</label>
                        <input name="year" placeholder="year" required>
                    </div>
                    <div>
                        <label for="origins">Origins:</label>
                        <select id="origins" name="origins">
                            <% origins.forEach(originObj => { %>
                                <option value="<%= originObj.origin %>">
                                    <%= originObj.origin %>
                                </option>
                            <% }) %>  
                        </select>
                    </div>
                    <div>
                        <label for="manufacturers">Manufacturers:</label>
                        <select id="manufacturers" name="manufacturers">
                            <% manufacturers.forEach(manufacturerObj => { %>
                                <option value="<%= manufacturerObj.manufacturer %>">
                                    <%= manufacturerObj.manufacturer %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit">Submit</button>
                </form>
                <a href="/">Back to home</a>
            </div>
        </div>
    </body>
</html>